TIMEZONE:
    COMMAND
    ENV TZ Asia/Shanghai

    RUN apk add tzdata --no-cache \
        && ln -sf /usr/share/zoneinfo/${TZ} /etc/localtime \
        && echo ${TZ} > /etc/timezone

UPGRADE:
    COMMAND
    RUN apk upgrade --no-cache

COMMON_PKG:
    COMMAND
    RUN apk add bash tzdata bind-tools busybox-extras ca-certificates libc6-compat vim wget curl --no-cache

INSTALL_BUILD_BASE:
    COMMAND
    RUN apk add --virtual build-dependencies alpine-sdk jq --no-cache

REMOVE_BUILD_BASE:
    COMMAND
    RUN apk del build-dependencies --no-cache 

